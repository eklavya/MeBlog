# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET 	/							controllers.BlogController.showPage(num: Int = 1)
POST	/login						controllers.LoginController.login
POST	/register					controllers.LoginController.register
GET		/register					controllers.LoginController.register
GET		/home 						controllers.LoginController.home
GET 	/logout						controllers.LoginController.logout
GET		/blog/:id 					controllers.BlogController.showBlog(id: Int)
GET		/Page						controllers.BlogController.showPage(num: Int = 1)
GET		/Page/:num					controllers.BlogController.showPage(num: Int)
POST	/newBlog					controllers.BlogController.newBlog
POST	/comment					controllers.BlogController.comment